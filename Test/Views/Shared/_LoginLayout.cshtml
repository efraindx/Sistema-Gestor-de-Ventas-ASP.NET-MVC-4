<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Images/icono.png")" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div>
                <div class="float-left" id="divIcono">
                    <p>@Html.ActionLink(
                                    " ",
                                    "Index",
                                    new { @controller = "Home" },
                                    new { @class = "Icono" })</p>
                </div>
                 <div class="float-right" id="divLoginPartial">
                    <section>
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        
            <div id="bodyRegisterAndLoginLayout">
                <div class="container">
                  <div class="form-signin" id="formularioLogin">
                        @RenderBody()
                  </div>
                    <div class="form-signin" id="formServicios">
                        <h2>Use otro servicio para iniciar sesión</h2>
                        <section class="social">    
                            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
                        </section>
                    </div>
                </div>
                <div id="divEspacio">
                   @*space*@
                </div>
            </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year De´ Compras NET</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required:false)
    </body>
</html>